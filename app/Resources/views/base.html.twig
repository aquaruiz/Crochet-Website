<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block main_title %}Crochet Library!{% endblock %}</title>
    {% block stylesheets %}
        {#<link rel="stylesheet" href="{{ asset("styles/bootstrap.min.css") }}">#}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('ball_yarn.ico') }}"/>
</head>
<body>
<div class="bs-example">
    <div>
        <img width="100%s" src="{{ asset('header.jpg') }}">
    </div>
    <nav class="navbar navbar-default">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="{{ path('dashboard') }}" class="navbar-brand">Crochet Library</a>
        </div>
        <!-- Collection of nav links and other content for toggling -->
        <div id="navbarCollapse" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="{{ path('dashboard') }}">Home</a></li>
                <li><a href="{{ path('categories_view') }}">Categories</a></li>
                {% if app.user %}
                    <li><a href="{{ path('user_profile') }}">{{ app.user.name|upper }}'s Profile</a></li>
                    <li><a href="{{ path('pattern_add') }}">Create New Pattern</a></li>
                {% endif %}
            </ul>
            <ul class="nav navbar-nav navbar-center">
                <li><a style="color: teal; font-weight: bolder">Hello and Welcome to Our Crochet Library!</a></li>

            </ul>
            <ul class="nav navbar-nav navbar-right">
                {% if app.user %}
                    <li><a href="{{ path('security_logout') }}">Logout ({{ app.user.name|upper }})</a></li>
                {% else %}
                <li><a href="{{ path('security_login') }}">Login</a></li>
                <li><a href="{{ path('user_register') }}">Register</a></li>
                {% endif %}
            </ul>
        </div>
    </nav>
</div>

<div class="container">
    {% block body %}
    {% endblock %}

    {# sidebar #}
    <aside class="col-md-3 col-md-pull-9">
        {% block sideabr %}
            {#{{ render(controller("WebShopBundle:WebShop:sidebarMenu")) }}#}
        {% endblock %}
    </aside>

    <hr/>
    <footer style="margin: 10px; font-style: italic; color: teal">
        {% block footer %}
            <p class="text-right">&copy; 2018 aquariuz </p>
        {% endblock %}
    </footer>

    {% block javascripts %}
        {#<script src="{{ asset("scripts/jquery-3.3.1.min.js") }}"></script>#}
        {#<script src="{{ asset("scripts/moment.min.js") }}"></script>#}
        {#<script src="{{ asset("scripts/bootstrap.js") }}"></script>#}

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    {% endblock %}
</div>
</body>
</html>
