{% extends 'base.html.twig' %}

{% block body %}
    <form name="register" action="{{ path('user_register') }}" method="post">
        <fieldset>
            <legend>Register</legend>

            <div>
                <label> Username:
                    <input type="text" name="user[username]"/>
                </label>
            </div>
            <div>
                <label>Password:
                    <input type="password" name="user[password][first]"/>
                </label>
            </div>
            <div>
                <label>Confirm password:
                    <input type="password" name="user[password][second]"/>
                </label>
            </div>
            <div>
                <label>Name:
                    <input type="text" name="user[name]"/>
                </label>
            </div>

            <div>
                <label>Portfolio:
                    <textarea name="user[portfolio]"></textarea>
                </label>
            </div>
            <div>
                <label>Name:
                    <input type="file" name="user[picture]"/>
                </label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}"/>
            <input type="submit" value="Register"/>
        </fieldset>
    </form>
{% endblock %}